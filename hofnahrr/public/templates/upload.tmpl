<form id="upload-preview" class="container">
    <div class="modal-body fixed-fluid">
        <aside class="well">
            <h5>{{i18n "sights_sights"}}</h5>
            <ul class="unstyled">
                <li class="nav-header">{{i18n "sights_unknown"}}</li>
                <li class="hover-tools-trigger">
                    <a data-file-drop-container-id="-1">{{i18n "sight_dont_know"}}</a>
                    <span class="hover-tools">
                        <a class="adder"><i class="pictos">&</i></a>
                    </span>
                </li>
                <li class="nav-header">{{i18n "sights_existing"}}</li>
                {{#sightsList}}
                <li class="hover-tools-trigger">
                    <a data-file-drop-container-id="{{id}}">{{name}}</a>
                    <span class="hover-tools">
                        <a class="adder"><i class="pictos">&</i></a>
                    </span>
                </li>
                {{/sightsList}}
            </ul>
        </aside>
        <div class="row-fluid">
            <ul class="thumbnails">
                <li class="justifier"><!-- --></li>
            </ul>
        </div>
    </div>
    <div class="modal-footer">
        <button class="pull-left btn close">{{i18n "picture_close"}}</button>
    </div>
</form>
